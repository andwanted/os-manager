<%- include('partials/header', { title }) %>

<div class="container py-4">
  <h2 class="mb-3">Anotações e Ocorrências</h2>

  <form action="/os/<%= ordem.codigo %>/imprevistos" method="POST">
    <div class="mb-3">
      <label for="imprevistos" class="form-label">Registro de Imprevistos</label>
      <textarea class="form-control" name="imprevistos" id="imprevistos" rows="3"><%= ordem.imprevistos || '' %></textarea>
    </div>
    <div class="mb-3">
      <label for="dificuldades" class="form-label">Dificuldades Encontradas</label>
      <textarea class="form-control" name="dificuldades" id="dificuldades" rows="3"><%= ordem.dificuldades || '' %></textarea>
    </div>
    <div class="mb-3">
      <label for="recomendacoes" class="form-label">Recomendações</label>
      <textarea class="form-control" name="recomendacoes" id="recomendacoes" rows="3"><%= ordem.recomendacoes || '' %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  </form>
</div>

<%- include('partials/footer') %>
