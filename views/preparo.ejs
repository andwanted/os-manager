<%- include('partials/header', { title }) %>

<div class="container py-4">
  <h2 class="mb-3">Checklist de Preparo</h2>

  <form action="/os/<%= ordem.codigo %>/preparo" method="POST">
    <div class="form-check mb-2">
      <input class="form-check-input" type="checkbox" name="combustivel" id="combustivel" <%= ordem.checklist_preparo?.combustivel ? 'checked' : '' %>>
      <label class="form-check-label" for="combustivel">
        Combust√≠vel verificado
      </label>
    </div>
    <div class="form-check mb-2">
      <input class="form-check-input" type="checkbox" name="ferramentas" id="ferramentas" <%= ordem.checklist_preparo?.ferramentas ? 'checked' : '' %>>
      <label class="form-check-label" for="ferramentas">
        Ferramentas e bolsas conferidas
      </label>
    </div>
    <div class="form-check mb-4">
      <input class="form-check-input" type="checkbox" name="epi" id="epi" <%= ordem.checklist_preparo?.epi ? 'checked' : '' %>>
      <label class="form-check-label" for="epi">
        EPI completos
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  </form>
</div>

<%- include('partials/footer') %>
